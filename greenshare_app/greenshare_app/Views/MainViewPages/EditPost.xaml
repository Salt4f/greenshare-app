<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="greenshare_app.Views.MainViewPages.EditPost"

             xmlns:control="clr-namespace:greenshare_app.Controls"
            xmlns:fontAwesome="clr-namespace:FontAwesome"
            BackgroundColor="{StaticResource colorWhite}"
            xmlns:model="clr-namespace:greenshare_app.Models" xmlns:viewmodels="clr-namespace:greenshare_app.ViewModels" x:DataType="viewmodels:EditPostViewModel">

    <ScrollView>
        <StackLayout BackgroundColor="{StaticResource colorWhite}" Style="{StaticResource styleStackLayoutDefault}">


            <StackLayout Margin="15,20,15,15" >
                <Frame  Style="{StaticResource styleFrameDefault}" BackgroundColor="Transparent" BorderColor="{StaticResource colorGreen3}" HorizontalOptions="FillAndExpand" CornerRadius="15" Margin="0,15,0,0">

                    <!--<control:BorderlessPicker
                        ItemsSource="{Binding PostTypes}"
                        Margin="15,20,15,15"
                        Style="{StaticResource styleEntryDefault}"
                        x:Name = "PickerOption"
                        Title="Select an option"
                        SelectedItem="{Binding PostType}"
                        />-->
                    <!--SelectedIndexChanged="{Binding IndexChangedCommand}"-->
                </Frame>
            </StackLayout>


            <StackLayout  Padding="0" Margin="15,0,15,15" >
                <Frame Style="{StaticResource styleFrameDefault}" BackgroundColor="Transparent" BorderColor="{StaticResource colorGreen3}" HorizontalOptions="FillAndExpand" CornerRadius="30" Margin="0,15,0,0">
                    <StackLayout Padding="10"  Orientation="Horizontal" >
                        <control:BorderlessEntry      
                            Style="{StaticResource styleEntryDefault}" 
                            Text="{Binding Name}" 
                            Placeholder="Product name" 
                            FontAttributes="None"/>
                    </StackLayout>
                </Frame>
            </StackLayout>

            <StackLayout  Margin="15,20,15,15" >
                <Frame Style="{StaticResource styleFrameDefault}" BackgroundColor="Transparent" BorderColor="{StaticResource colorGreen3}" HorizontalOptions="FillAndExpand" CornerRadius="15" Margin="0,15,0,0">
                    <StackLayout Padding="10"  Orientation="Horizontal" >
                        <control:BorderlessEditor
                            HeightRequest="100"
                            Style="{StaticResource styleEntryDefault}"
                            Placeholder="Description" 
                            AutoSize="TextChanges"
                            Text="{Binding Description}"/>
                    </StackLayout>
                </Frame>
            </StackLayout>

            <StackLayout IsVisible="{Binding IsVisible}" Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Padding="5,0,5,5">
                <Frame Style="{StaticResource styleFrameDefault}" BackgroundColor="{StaticResource colorGreen9}" BorderColor="{StaticResource colorGreen3}" CornerRadius="15" Margin="0,15,0,0">
                    <ScrollView Orientation="Horizontal" Padding="17">
                        <StackLayout Orientation="Horizontal" BindableLayout.ItemsSource="{Binding Photos}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="Image">
                                        <Frame CornerRadius="10" Padding="25" Style="{StaticResource styleFrameDefault}" BackgroundColor="AliceBlue" Margin="1">
                                        <Image  Aspect="AspectFill"
                                                HeightRequest="100"
                                                WidthRequest="100"
                                                Source="{Binding Source}" VerticalOptions="Start"/>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </ScrollView>
                </Frame>
                <Frame Style="{StaticResource styleFrameDefault}" BackgroundColor="{StaticResource colorGreen9}" BorderColor="{StaticResource colorGreen3}" CornerRadius="15" Margin="0,15,0,0">
                    <Frame CornerRadius="10" Padding="25" Style="{StaticResource styleFrameDefault}" BackgroundColor="AliceBlue" Margin="1">
                        <Image Source="{Binding Icon.Source}" VerticalOptions="Start"/>
                    </Frame>
                </Frame>
                <StackLayout Padding="0,5,0,0" Orientation="Horizontal" HorizontalOptions="Center">
                    <Button Style="{StaticResource styleButtonDefault}" Command="{Binding OnAddPhotoButtonCommand}" BackgroundColor="{StaticResource colorGreen3}" Text="Afegir Foto" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Button Style="{StaticResource styleButtonDefault}" Command="{Binding OnAddIconButtonCommand}" BackgroundColor="{StaticResource colorGreen3}" Text="Afegir Icon" HorizontalOptions="Center" VerticalOptions="Center"/>
                </StackLayout>
            </StackLayout>
            
            <StackLayout Margin="15,20,15,15" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackLayout >
                        <Frame Style="{StaticResource styleFrameDefault}" BackgroundColor="Transparent" BorderColor="{StaticResource colorGreen3}" HorizontalOptions="FillAndExpand" CornerRadius="30" >
                            <StackLayout Padding="10"  Orientation="Horizontal" >
                                <control:BorderlessEntry      
                                    Style="{StaticResource styleEntryDefault}" 
                                    Text="{Binding NewTag}" 
                                    Placeholder="New Tag"
                                    Grid.Column="0" 
                                    HorizontalOptions="Fill" 
                                    VerticalOptions="Fill"
                                    WidthRequest="120"/>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                    <Button 
                        Grid.Column="1" 
                        HorizontalOptions="Start" 
                        VerticalOptions="Center"
                        Text="Add Tag"
                        Command="{Binding OnAddTagButtonCommand}"
                        Style="{StaticResource styleButtonDefault}"
                        />
                    
                </Grid>
            </StackLayout>
            <!--LOS TAGS SE AÑADEN, PERO NO SE VEN EN LA VISTA UNA VEZ AÑADIDOS-->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                <ListView ItemsSource="{Binding Tags}" HorizontalOptions="Center" SelectedItem="{Binding SelectedTag}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:Tag">
                            <ViewCell>
                                <StackLayout Orientation="Horizontal" Margin="5" HorizontalOptions="Center" VerticalOptions="Center">
                                    <Frame BackgroundColor="{Binding Color}" CornerRadius="25" Padding="5">
                                        <Label Text="{Binding Name}"
                                            Style="{StaticResource styleLabelWhite}"
                                            VerticalOptions="Center"/>
                                    </Frame>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button 
                        Grid.Column="0" 
                        HorizontalOptions="Start" 
                        VerticalOptions="Center"
                        Text="Remove Tag"
                        Command="{Binding OnRemoveTagButtonCommand}"
                        Style="{StaticResource styleButtonDefault}"
                        />
            </StackLayout>






            <StackLayout Margin="15,20,15,15">
                <Frame  Style="{StaticResource styleFrameDefault}" BackgroundColor="Transparent" BorderColor="{StaticResource colorGreen3}" HorizontalOptions="FillAndExpand" CornerRadius="30" Margin="0,10,0,0">
                    <StackLayout  Orientation="Horizontal">
                        <Frame Style="{StaticResource styleFrameEntry}" CornerRadius="30">
                            <Label Style="{StaticResource styleLabelIcon}" Text="{x:Static fontAwesome:FontAwesomeIcons.Calendar}" FontFamily="FAS"></Label>
                        </Frame>
                        <DatePicker Date="{Binding TerminationDateTime}" Style="{StaticResource styleDatePickerDefault}" HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>
            </StackLayout>


            <StackLayout Margin="15,20,15,15" >
                <Button Text="Submit Changes" Style="{StaticResource styleButtonDefault}" Command="{Binding OnSubmitButtonCommand}"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>