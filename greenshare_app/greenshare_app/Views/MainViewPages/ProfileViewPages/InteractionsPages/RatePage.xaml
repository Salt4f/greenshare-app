<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="greenshare_app.Views.MainViewPages.ProfileViewPages.InteractionsPages.RatePage"
             xmlns:control="clr-namespace:greenshare_app.Controls"
             xmlns:model="clr-namespace:greenshare_app.Models"
             xmlns:multiIdioma="clr-namespace:greenshare_app.Text"
             xmlns:viewModels="clr-namespace:greenshare_app.ViewModels"
             xmlns:rating="clr-namespace:Syncfusion.SfRating.XForms;assembly=Syncfusion.SfRating.XForms" 
             x:DataType="viewModels:RatePageViewModel"
             BackgroundColor="{StaticResource colorGreen9}">


    <Frame Style="{StaticResource styleFrameDefault}" BackgroundColor="{StaticResource colorGreen2}" CornerRadius="15" Padding="10" Margin="30" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
        <StackLayout Style="{StaticResource styleStackLayoutDefault}" Padding="10" Margin="0">
            <rating:SfRating x:Name="rating" ItemCount="5" Precision="Standard" Margin="10" ItemSize="45" HorizontalOptions="Center" Value="{Binding RatingValue}">
                <rating:SfRating.RatingSettings>
                    <rating:SfRatingSettings RatedFill="Yellow" UnRatedFill="Transparent" RatedStroke="Black" UnRatedStroke="Black" RatedStrokeWidth="4" UnRatedStrokeWidth="2" />
                </rating:SfRating.RatingSettings>
            </rating:SfRating>
            <control:BorderlessEditor
                Style="{StaticResource styleEntryDefault}"
                Placeholder="{x:Static multiIdioma:Text.Rate}"
                Text="{Binding Message}"
                HeightRequest="350"
                Margin="15"
                BackgroundColor="{StaticResource colorGreen3}"
                TextColor="{StaticResource colorWhite}"
                AutoSize="TextChanges"
                FontSize="15"/>

            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" VerticalOptions="Center" HorizontalOptions="Center" />

            <Frame Style="{StaticResource styleFrameDefault}" CornerRadius="20" Margin="5">
                <Button Text="{x:Static multiIdioma:Text.RateAndComplete}" FontFamily="Montserrat-SemiBold" TextColor="{StaticResource colorWhite}" BackgroundColor="{StaticResource colorBlack}"
                        Style="{StaticResource styleButtonDefault}" FontSize="15"
                        Command="{Binding OnCompleteButtonCommand}"/>
            </Frame>
            
        </StackLayout>
    </Frame>
</ContentPage>