<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="greenshare_app.Views.MainViewPages.ViewOffer"
             xmlns:control="clr-namespace:greenshare_app.Controls"
            xmlns:fontAwesome="clr-namespace:FontAwesome"
            BackgroundColor="{StaticResource colorWhite}"
            xmlns:model="clr-namespace:greenshare_app.Models">
    <ScrollView>

        <StackLayout Padding="20">

            <StackLayout>
                <Button HorizontalOptions="EndAndExpand"
                Text="Go To Edit"
                Command="{Binding OnGoToEditButtonCommand}"
                Style="{StaticResource styleButtonDefault}"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" Padding="20">
                <Frame>
                    <Label Style="{StaticResource styleLabelBlack}" Text="{Binding Name}"> POST NAME </Label>
                </Frame>
                <Frame>
                    <Label Style="{StaticResource styleLabelBlack}" Text="{Binding Description}">DESCRIPTION</Label>
                </Frame> 
                <Frame>
                    <Label Style="{StaticResource styleLabelBlack}" Text="{Binding PostType}">POST TYPE</Label>
                </Frame>
                <Frame>
                    <Label Style="{StaticResource styleLabelBlack}" Text="{Binding TerminationDateTime}">Fecha</Label>
                </Frame>
            </StackLayout>
            <!--IMATGES, INVISIBLES SI NO ES UNA OFERTA-->
            <StackLayout IsVisible="{Binding IsVisible}" Orientation="Horizontal">
                <ListView ItemsSource="{Binding Photos}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:PostCard">
                            <ViewCell>
                                <Frame BackgroundColor="{StaticResource colorGreen1}" CornerRadius="10" Padding="7" Margin="2" VerticalOptions="CenterAndExpand">
                                    <Image HeightRequest="175" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Source="{Binding Icon.Source}"></Image>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
            <!--TAGS-->
            <StackLayout Orientation="Horizontal">
                <ListView ItemsSource="{Binding Tags}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:PostCard">
                            <ViewCell>
                                <Frame BackgroundColor="{StaticResource colorGreen1}" CornerRadius="10" Padding="7" Margin="2" VerticalOptions="CenterAndExpand">

                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
            <!--
            <StackLayout  Orientation="Vertical" Padding="20" >
                
        
                <Frame Style="{StaticResource styleFrameEntry}" CornerRadius="30">
                    <Label Style="{StaticResource styleLabelIcon}" Text="{x:Static fontAwesome:FontAwesomeIcons.Calendar}" FontFamily="FAS"></Label>
                </Frame>
                <DatePicker IsEnabled="False" Date="{Binding TerminationDateTime}" Style="{StaticResource styleDatePickerDefault}" HorizontalOptions="Center"/>
        
             </StackLayout>
            -->
        </StackLayout>
    </ScrollView>
</ContentPage>