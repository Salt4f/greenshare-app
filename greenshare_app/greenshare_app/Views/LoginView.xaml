<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="greenshare_app.Views.LoginView">
    <ContentPage.Content>
        <StackLayout  Margin="50,150,50,50"> <!--Margin = "Left,Top,Right,Down"-->

            <Entry x:Name ="email" Placeholder="Email"
                  VerticalOptions="Center"
                  Keyboard="Email"
                  />
            <Entry x:Name="password" Placeholder="Password" IsPassword="True"
                  VerticalOptions="Center"
                  />
            <Button x:Name ="loginButton" Text="Sign In" Clicked="loginButton_Clicked"
                    />
            <Button x:Name ="registerButton" Text="Sign Up" Clicked="registerButton_Clicked"
                    />
            <Button x:Name ="googleButton" Text="Sign In with google" Clicked="googleButton_Clicked"
                    />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>