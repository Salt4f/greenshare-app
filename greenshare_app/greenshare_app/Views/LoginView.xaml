<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="greenshare_app.Views.LoginView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resource="clr-namespace:greenshare_app.Text">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout StyleClass="texts">
                <Entry
                x:Name="email"
                Keyboard="Email"
                Placeholder="Email"
                VerticalOptions="Center" />
                <Entry
                x:Name="password"
                IsPassword="True"
                Placeholder="Password"
                VerticalOptions="Center" />
            </StackLayout>

            <StackLayout StyleClass="butons">
                <Button
                x:Name="loginButton"
                Clicked="loginButton_Clicked"
                Text="{x:Static resource:Text.loginButtonText}" />
                <Button
                x:Name="registerButton"
                Clicked="registerButton_Clicked"
                Text="Sign Up" />
                <Button
                x:Name="googleButton"
                Clicked="googleButton_Clicked"
                Text="Sign In with Google" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>