<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"           
       xmlns:local="clr-namespace:greenshare_app.Views.MainViewPages"
       x:Class="greenshare_app.Views.MainView">
    <TabBar>
        <Tab Icon="hand_holding.png">
            <ShellContent ContentTemplate="{DataTemplate local:OffersPage}" />
        </Tab>
        <Tab Icon="handshake.png">
            <ShellContent ContentTemplate="{DataTemplate local:RequestsPage}" />
        </Tab>
        <Tab Icon="plus.png">
            <ShellContent ContentTemplate="{DataTemplate local:addPage}" />
        </Tab>
        <Tab Icon="trophy.png">
            <ShellContent ContentTemplate="{DataTemplate local:RewardsPage}" />
        </Tab>
        <Tab Icon="profile.png">
            <ShellContent ContentTemplate="{DataTemplate local:ProfilePage}" />
        </Tab>
    </TabBar>
</Shell>