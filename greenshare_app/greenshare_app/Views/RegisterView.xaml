<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="greenshare_app.Views.RegisterView"
             >
    <ContentPage.Content>
        <StackLayout BackgroundColor="{StaticResource colorBackground}">
            <Grid Margin="50,25,50,25" VerticalOptions="CenterAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0">
                    <Entry
                            Text="{Binding Nickname}"
                            Placeholder="Nickname"
                            Style="{StaticResource styleEntry}"
                            />
                </StackLayout>
                <StackLayout Grid.Row="1">
                    <Entry
                            Text="{Binding Email}"
                            Keyboard="Email"
                            Placeholder="Email"
                            Style="{StaticResource styleEntry}"
                            />
                </StackLayout>
                <StackLayout Grid.Row="2">
                    <Entry
                            Text="{Binding Password}"
                            IsPassword="True"
                            Placeholder="Password" 
                            Style="{StaticResource styleEntry}"
                            />
                </StackLayout>
                <StackLayout Grid.Row="3">
                    <Entry
                            Text="{Binding RepeatPassword}"
                            IsPassword="True"
                            Placeholder="Repeat Password" 
                            Style="{StaticResource styleEntry}"
                            />
                </StackLayout>
                <StackLayout Grid.Row="6">
                    <Button
                            Command="{Binding RegisterButtonCommand}"
                            Text="Sign Up"
                            Style="{StaticResource styleButton}"
                            />
                </StackLayout>

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>